function [A,eye] = grid(width, height, p, dist, disteye, r1, r2)
A = zeros(height, width, 3);

%Richtungsvektoren skalieren
r1 = r1*dist/norm(r1);
r2 = r2*dist/norm(r2);

%Gitter erstellen
for i=1:height
    for j=1:width
        A(i,j,1:3)= p + (i-1)/(height-1)*r1 + (j-1)/(width-1)*r2;
    end
end

%Auge
center = p + 1/2*width*r2 + 1/2*height*r1;
normal = cross(r1,r2);
eye = center + disteye*normal/norm(normal);

end